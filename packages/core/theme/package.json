{
  "name": "@heroui-mobile/theme",
  "version": "1.0.0",
  "description": "The default theme for HeroUI components",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "config.js",
    "config.d.ts",
    "plugin.js",
    "plugin.d.ts",
    "colors.js",
    "colors.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "color": "^4.2.3",
    "color2k": "^2.0.3",
    "deepmerge": "4.3.1",
    "flat": "^5.0.2",
    "tailwind-variants": "^0.3.0",
    "tailwind-merge": "3.4.0",
    "@heroui/shared-utils": "2.1.9"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.17",
    "@heroui/theme": "2.4.17"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/flat": "^5.0.2",
    "tailwindcss": "3.4.17",
    "clean-package": "2.2.0"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}